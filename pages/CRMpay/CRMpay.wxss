
.top{
  width: 100%;
  display: flex;
  text-align: center;
  border-bottom: 1px solid #ccc;
  margin-bottom: 5rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.approval-btn-left{
  display: inline-block;
  flex:1;
  height: 60rpx;
  line-height: 60rpx;
}

.tabflag{
  background: #4a4d5b;
  color:white;
  background: #bababa
}
.pay{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, .4);

}
.paybox{
  width: 500rpx;
  background: white;
  border-radius: 15rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -250rpx;
  margin-top: -150rpx;
}
.paybtn{
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  color: white;
  background: #4a4d5b;
}
.title{
  text-align: center;
  line-height: 66rpx;
  height: 66rpx;
}
.payinput{
  width: 90%;
  border: 1rpx solid #bababa;
  margin: 10rpx auto;
  padding-left: 10rpx;
}
.openpay{
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  background: #4a4d5b;
  height: 66rpx;
  line-height: 66rpx;
  width: 100%;
  color: white;
}
.item{
  border-bottom: 1rpx solid #bababa;
  height: 88rpx;
  line-height: 88rpx;
  margin:0 20rpx;
}