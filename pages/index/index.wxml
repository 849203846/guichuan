<!--index.wxml-->
<view>
  <view class='top-title'>驾驶证信息</view>
  <view>
    <view class='top-input'>
      <text class='left-title'>车主姓名:</text>
      <input bindinput='SaveRealname' placeholder='请输入...'></input>
    </view>
    <view class='top-input'>
      <text  class='left-title'>车主电话:</text>
      <input type='number' bindinput='SaveMobile' placeholder='请输入...'></input>
    </view>
    <view class='top-input'>
      <text  class='left-title'>身份证号:</text>
      <input bindinput='SaveId_num' placeholder='请输入...'></input>
    </view>
  </view>
  <view class='top-title'>行驶证信息</view>
  <view>
    <view class='top-input'>
      <text  class='left-title'>车型:</text>
      <input bindinput='SaveCar_brand' placeholder='请输入...'></input>
    </view>
    <view class='top-input'>
      <text  class='left-title'>车牌号:</text>
      <input bindinput='SaveCar_num' placeholder='请输入...'></input>
    </view>
    <view class='top-input'>
      <text  class='left-title'>车辆颜色:</text>
      <input bindinput='SaveCar_color' placeholder='请输入...'></input>
    </view>
    <view class='top-input'>
      <text  class='left-title'>车辆所有人:</text>
      <input bindinput='SaveCar_own' placeholder='请输入...'></input>
    </view>
    <view class='top-input'>
      <text  class='left-title'>车辆注册日期:</text>
      <input bindinput='SaveCar_register' placeholder='请输入...'></input>
    </view>
  </view>
  <button class='submitbtn' bindtap='btnSubmit'>提交</button>
</view>
