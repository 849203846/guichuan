
.top-title {
  height: 50rpx;
  background: rgb(241, 241, 241);
  font-size: 12px;
  line-height: 50rpx;
  margin: 5px 0;
  padding-left: 10rpx;
}
.top-input {
  display: flex;
  margin-top: 5rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #D9D9D9;
  margin: 5rpx;
  padding-left: 15rpx;
}
.top-input text{
  width: 30%;
}
.top-input input {
  flex: 1;
  /* border-bottom: 1px solid #bababa; */
  margin-right: 20rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.left-title {
  font-weight: bold;
}

.submitbtn{
  width: 90%;
  margin: auto;
  margin-top: 20px;
  color:#fff;
  font-weight: bold;
  background: rgb(204, 68, 4);
}
.thumb{
  margin: 10rpx auto;
  width: 90%;
  background: red;
  display: block;
}
.oilprice text{
  display: inline;
  width: auto;
  font-size: 28rpx;
  margin-right:5rpx;
}
.oilclass{
  font-size: 28rpx;
}
.oilprice input{
  font-size: 28rpx;
}
.oilpricetitle text{
  font-size:12px;
}
.oilpricetitle text:nth-child(2){
  font-size:34rpx;
  margin-left:15rpx;
}