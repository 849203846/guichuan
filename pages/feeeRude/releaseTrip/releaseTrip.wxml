
<view>
  <view class='title'>信息填写</view>
  <view class='first-block'>

    <view class='first-one' bindtap='SaveStart'>
      <test>出发地址</test>
      <text>{{start}}</text>
    </view>

    <view class='first-one' bindtap='SaveEnd'>
      <test>目标地址</test>
      <text>{{end}}</text>
    </view>

    <view class='first-one car-number'>
      <test>乘车人数</test>
      <input type='number' bindinput='SaveCount'></input>
    </view>

    <view class='first-one car-number'>
      <test>备注</test>
      <input placeholder='请输入备注' bindinput='SaveMarker'></input>
    </view>

    <view class='first-one car-number'>
      <test>乘车价格</test>
      <input type='number' placeholder='请输入可接受价格' bindinput='SavePrice'></input>
    </view>

    <view class='first-one car-number'>
      <test>手机号</test>
      <input value="{{phone}}" bindinput='Savephone'  placeholder='请输入手机号'></input>
    </view>

    <view class='first-one car-number'>
      <test>验证码</test>
      <input bindinput='SaveCode'></input>
      <test class='yz-btn' bindtap="sendCode">发送验证码</test>
    </view>

    <view class='first-one car-number'>
      <test>出发时间</test>
      <picker mode="date" value="{{go_time}}"  bindchange="SaveTime" >
      <view class="picker">{{go_time}}</view>
      </picker>
    </view>

  </view>

  <button class='submitBtn' bindtap="submit">提交</button>
</view>