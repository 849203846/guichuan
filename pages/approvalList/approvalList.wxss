/* pages/approvalList/approvalList.wxss */
page{
  background: #f4f4f4;
}
.top{
  width: 100%;
  display: flex;
  text-align: center;
  border-bottom: 1px solid #ccc;
  margin-bottom: 5rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.approval-btn-left{
  display: inline-block;
  flex:1;
  height: 60rpx;
  line-height: 60rpx;
}

.approval-btn-right{
  display: inline-block;
  flex: 1;
}
.list-msg{
  display: flex;
  height: 100rpx;
  background: white;
  /* width: 90%; */
  margin: 40rpx 30rpx 30rpx 30rpx;
  color: #4a4a4a;
  border: 1px solid #bababa;
  border-top: none;
}
.list-msg-left{
  flex: 2;
}
.list-msg-left view {
  padding-left: 20rpx;
  line-height: 50rpx;
}
.list-msg-right{
  flex: 1;
  padding-right: 10px;
  line-height: 88rpx;
}
.tabflag{
  background: #4a4d5b;
  color:white;
  background: #bababa
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  display: flex;
  border-top: 1px solid #2232
}
.footer navigator{
  flex: 1;
  text-align: center;
}
.footer navigator:nth-child(1){
  border-right: 1px solid #2232
}