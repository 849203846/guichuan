/* pages/detailsMsg/detailsMsg.wxss */
.top-title {
  height: 50rpx;
  background: rgb(241, 241, 241);
  font-size: 12px;
  line-height: 50rpx;
  margin: 5px 0;
  padding-left: 10rpx;
}
.top-input {
  display: flex;
  margin-top: 5rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #D9D9D9;
  margin: 5rpx;
}
.top-input text{
  width: 30%;
  margin-left: 20rpx;
}
.top-input input {
  flex: 1;
  /* border-bottom: 1px solid #bababa; */
  margin-right: 20rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.left-title {
  font-weight: bold;
}

.flooter-btn{
  flex: 1;
  text-align: center;
  margin-top: 20rpx;
}

.flooter-btn-left {
  display: inline-block;
  width: 40%;
  margin-right: 10rpx;
}

.flooter-btn-right{
  display: inline-block;
  width: 40%;
  margin-left: 10rpx;
}