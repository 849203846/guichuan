/* pages/detailsMsg/detailsMsg.wxss */
.top-title {
  height: 50rpx;
  background: rgb(241, 241, 241);
  font-size: 12px;
  line-height: 50rpx;
  margin: 5px 0;
  padding-left: 10rpx;
}
.top-input {
  display: flex;
  margin-top: 5rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #D9D9D9;
  margin: 5rpx;
}
.top-input text{
  width: 30%;
  margin-left: 20rpx;
}
.top-input input {
  flex: 1;
  /* border-bottom: 1px solid #bababa; */
  margin-right: 20rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.left-title {
  font-weight: bold;
}

.flooter-btn{
  flex: 1;
  text-align: center;
  margin-top: 20rpx;
}

.flooter-btn-left {
  display: inline-block;
  width: 40%;
  margin-right: 10rpx;
}

.flooter-btn-right{
  display: inline-block;
  width: 40%;
  margin-left: 10rpx;
}
.alert{
  width: 100%;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(102,102,102,.4);
  z-index: 200;
}
.alertContent{
  width:600rpx;
  height:500rpx;
  background-color: white;
  opacity: 1;
  float: left;
  z-index: 1000;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -300rpx;
  margin-top: -250rpx;
  

}
.alerth{
  height: 44rpx;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 5rpx;
}
.alertContent textarea{
  width: 90%;
  margin: 0 auto;
  border: 1rpx solid #666;
  height: 300rpx;
  padding: 10rpx;
  }
  .alerthBtn{
    text-align: center;
  height: 44rpx;
    padding: 20rpx 0;
    width: 90%;
    margin: 0 auto;
    background: #CE3C39;
    border-radius: 20rpx;
    margin-top: 10rpx;
  }